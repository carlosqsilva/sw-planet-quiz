{
  "presets": [
    [
      "@babel/preset-env",
      {
        "modules": false,
        "useBuiltIns": false,
        "loose": true,
        "targets": {
          "browsers": ["since 2018"]
        }
      }
    ]
  ],
  "plugins": [
    ["transform-react-jsx"],
    [
      "@babel/plugin-proposal-decorators",
      {
        "legacy": true
      }
    ],
    ["@babel/plugin-proposal-class-properties", { "loose": true }]
  ]
}
